  <question type="shortanswer">
    <name>
      <text>understanding_theme02_no01</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>How to add directory <code>/opt/myapp/bin</code> to the <code>PATH</code> variable in Bash?</p>]]></text>
    </questiontext>
    <defaultgrade>1.0000000</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <usecase>0</usecase>
    <answer fraction="100" format="moodle_auto_format">
      <text>export PATH=$PATH:/opt/myapp/bin</text>
    </answer>
    <answer fraction="100" format="moodle_auto_format">
      <text>export PATH=/opt/myapp/bin:$PATH</text>
    </answer>
  </question>

