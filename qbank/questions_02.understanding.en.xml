  <question type="shortanswer">
    <name>
      <text>understanding_theme02_no04</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>How to calculate the sum of two integers <code>a</code> and <code>b</code> in Bash and store the result in variable <code>sum</code>?</p>]]></text>
    </questiontext>
    <defaultgrade>1.0000000</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <usecase>0</usecase>
    <answer fraction="100" format="moodle_auto_format">
      <text>sum=$((a + b))</text>
    </answer>
    <answer fraction="100" format="moodle_auto_format">
      <text>sum=$(echo "$a + $b" | bc)</text>
    </answer>
  </question>

